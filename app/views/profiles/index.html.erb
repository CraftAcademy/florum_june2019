<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>My plants</th>
      <th>Favorite flora</th>
      <th>Latest posts</th>
      <th>About me</th>
      <th>Profile pic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.city %></td>
        <td><%= profile.my_plants %></td>
        <td><%= profile.favorite_flora %></td>
        <td><%= profile.latest_posts %></td>
        <td><%= profile.about_me %></td>
        <td><%= profile.profile_pic %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

